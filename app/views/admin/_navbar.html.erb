<header class="hidden bg-amaranth-500 sm:flex w-full justify-center items-center text-white-50 py-6 px-5">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex">
      <div class="">
        <%= link_to "Dashboard", admin_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
      </div>
      <div class="">
        <%= link_to "Courses", admin_courses_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
      </div>
      <div class="">
        <%= link_to "Users", admin_users_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
      </div>
    </div>
    <div>
      <%= link_to admin_path do %>
        <% image_tag "logo.png", class: "h-12" %>
      <% end %>
    </div>
    <div class="flex">
      <% if admin_signed_in? %>
        <%= link_to "Sign Out", destroy_admin_session_path, data: { 'turbo_method' => :delete, 'turbo-confirm' => "Are you sure?" },  class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
      <% end %>
    </div>
  </div>
</header>

<header data-controller="navbar" class="bg-amaranth-500 sm:hidden w-full py-4 px-5 text-white-50">
  <div class="flex justify-between items-center">
    <div>
      <%= link_to admin_path do %>
        <%= image_tag "logo.png", class: "h-12" %>
      <% end %>
    </div>
    <div class="p-4">
      <button id="bars" data-action="click->navbar#toggle" type="button" class="w-full flex justify-end items-center">
        <i class="fa-solid fa-bars"></i>
      </button>
      <button id="close" data-action="click->navbar#toggle" type="button" class="hidden w-full flex justify-end items-center">
        <i class="fa-solid fa-x"></i>
      </button>
    </div>
  </div>
  <div id="mobile-links" class="hidden border-t-2 border-amaranth-400 flex flex-col w-full justify-center items-center" >
    <div class="mt-4">
      <%= link_to "Dashboard", admin_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
    </div>
    <div class="mt-4">
      <%= link_to "Courses", admin_courses_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
    </div>
    <div class="mt-4">
      <%= link_to "Users", admin_users_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
    </div>
    <% if admin_signed_in? %>
      <%= link_to "Sign Out", destroy_admin_session_path, data: { 'turbo_method' => :delete, 'turbo-confirm' => "Are you sure?" },  class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded px-2 py-4" %>
    <% end %>
  </div>
</header>